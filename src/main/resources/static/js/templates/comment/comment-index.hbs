<div id="comment-{{id}}" class="comment card mb-3">
    <div class="card-header">
        {{nickname}}
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
            <p>{{content}}</p>
            <footer class="blockquote-footer">{{createdAt}}</footer>
        </blockquote>
    </div>
</div>